@page "/facilities/details"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Facility</h2>
    <hr />
    @if (facility is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@facility.Name</dd>
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@facility.Location</dd>
            <dt class="col-sm-2">VenueId</dt>
            <dd class="col-sm-10">@facility.VenueId</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@facility.Price</dd>
        </dl>
        <div>
            <a href="@($"/facilities/edit?facilityid={facility.FacilityId}")">Edit</a> |
            <a href="@($"/facilities")">Back to List</a>
        </div>
    }
</div>

@code {
    private Facility? facility;

    [SupplyParameterFromQuery]
    private int FacilityId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        facility = await context.Facility.FirstOrDefaultAsync(m => m.FacilityId == FacilityId);

        if (facility is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
