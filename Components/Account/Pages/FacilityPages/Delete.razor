@page "/facilities/delete"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Facility</h2>
    <hr />
    @if (facility is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@facility.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@facility.Location</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">VenueId</dt>
            <dd class="col-sm-10">@facility.VenueId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@facility.Price</dd>
        </dl>
        <EditForm method="post" Model="facility" OnValidSubmit="DeleteFacility" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(facility is null)">Delete</button> |
            <a href="/facilities">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Facility? facility;

    [SupplyParameterFromQuery]
    private int FacilityId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        facility = await context.Facility.FirstOrDefaultAsync(m => m.FacilityId == FacilityId);

        if (facility is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteFacility()
    {
        using var context = DbFactory.CreateDbContext();
        context.Facility.Remove(facility!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/facilities");
    }
}
