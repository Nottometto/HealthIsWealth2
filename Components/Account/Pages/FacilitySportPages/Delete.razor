@page "/facilitysports/delete"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>FacilitySport</h2>
    <hr />
    @if (facilitysport is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">SportId</dt>
            <dd class="col-sm-10">@facilitysport.SportId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">FacilityId</dt>
            <dd class="col-sm-10">@facilitysport.FacilityId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">VenueId</dt>
            <dd class="col-sm-10">@facilitysport.VenueId</dd>
        </dl>
        <EditForm method="post" Model="facilitysport" OnValidSubmit="DeleteFacilitySport" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(facilitysport is null)">Delete</button> |
            <a href="/facilitysports">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private FacilitySport? facilitysport;

    [SupplyParameterFromQuery]
    private int FacilitySportId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        facilitysport = await context.FacilitySport.FirstOrDefaultAsync(m => m.FacilitySportId == FacilitySportId);

        if (facilitysport is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteFacilitySport()
    {
        using var context = DbFactory.CreateDbContext();
        context.FacilitySport.Remove(facilitysport!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/facilitysports");
    }
}
