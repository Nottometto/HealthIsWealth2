@page "/timeslots/edit"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Timeslot</h2>
<hr />
@if (Timeslot is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Timeslot" OnValidSubmit="UpdateTimeslot" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Timeslot.TimeslotId" value="@Timeslot.TimeslotId" />
                <div class="mb-3">
                    <label for="startdt" class="form-label">StartDT:</label>
                    <InputDate id="startdt" @bind-Value="Timeslot.StartDT" class="form-control" />
                    <ValidationMessage For="() => Timeslot.StartDT" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="enddt" class="form-label">EndDT:</label>
                    <InputDate id="enddt" @bind-Value="Timeslot.EndDT" class="form-control" />
                    <ValidationMessage For="() => Timeslot.EndDT" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="facilityid" class="form-label">FacilityId:</label>
                    <InputNumber id="facilityid" @bind-Value="Timeslot.FacilityId" class="form-control" />
                    <ValidationMessage For="() => Timeslot.FacilityId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="venueid" class="form-label">VenueId:</label>
                    <InputNumber id="venueid" @bind-Value="Timeslot.VenueId" class="form-control" />
                    <ValidationMessage For="() => Timeslot.VenueId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/timeslots">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int TimeslotId { get; set; }

    [SupplyParameterFromForm]
    private Timeslot? Timeslot { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Timeslot ??= await context.Timeslot.FirstOrDefaultAsync(m => m.TimeslotId == TimeslotId);

        if (Timeslot is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateTimeslot()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Timeslot!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TimeslotExists(Timeslot!.TimeslotId))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/timeslots");
    }

    private bool TimeslotExists(int timeslotid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Timeslot.Any(e => e.TimeslotId == timeslotid);
    }
}
