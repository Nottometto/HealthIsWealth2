@page "/timeslots/create"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Timeslot</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Timeslot" OnValidSubmit="AddTimeslot" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="startdt" class="form-label">StartDT:</label> 
                <InputDate id="startdt" @bind-Value="Timeslot.StartDT" class="form-control" /> 
                <ValidationMessage For="() => Timeslot.StartDT" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="enddt" class="form-label">EndDT:</label> 
                <InputDate id="enddt" @bind-Value="Timeslot.EndDT" class="form-control" /> 
                <ValidationMessage For="() => Timeslot.EndDT" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="facilityid" class="form-label">FacilityId:</label> 
                <InputNumber id="facilityid" @bind-Value="Timeslot.FacilityId" class="form-control" /> 
                <ValidationMessage For="() => Timeslot.FacilityId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="venueid" class="form-label">VenueId:</label> 
                <InputNumber id="venueid" @bind-Value="Timeslot.VenueId" class="form-control" /> 
                <ValidationMessage For="() => Timeslot.VenueId" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/timeslots">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Timeslot Timeslot { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddTimeslot()
    {
        using var context = DbFactory.CreateDbContext();
        context.Timeslot.Add(Timeslot);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/timeslots");
    }
}
