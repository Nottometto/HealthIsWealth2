@page "/sports/create"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.DatabaseTables
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Sport</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Sport" OnValidSubmit="AddSport" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="Sport.Name" class="form-control" /> 
                <ValidationMessage For="() => Sport.Name" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label> 
                <InputText id="description" @bind-Value="Sport.Description" class="form-control" /> 
                <ValidationMessage For="() => Sport.Description" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/sports">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Sport Sport { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddSport()
    {
        using var context = DbFactory.CreateDbContext();
        context.Sport.Add(Sport);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/sports");
    }
}
