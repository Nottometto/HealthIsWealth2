@page "/sports/edit"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.DatabaseTables
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Sport</h2>
<hr />
@if (Sport is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Sport" OnValidSubmit="UpdateSport" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Sport.SportID" value="@Sport.SportID" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Sport.Name" class="form-control" />
                    <ValidationMessage For="() => Sport.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <InputText id="description" @bind-Value="Sport.Description" class="form-control" />
                    <ValidationMessage For="() => Sport.Description" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/sports">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int SportID { get; set; }

    [SupplyParameterFromForm]
    private Sport? Sport { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Sport ??= await context.Sport.FirstOrDefaultAsync(m => m.SportID == SportID);

        if (Sport is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateSport()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Sport!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!SportExists(Sport!.SportID))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/sports");
    }

    private bool SportExists(int sportid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Sport.Any(e => e.SportID == sportid);
    }
}
